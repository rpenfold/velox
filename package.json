{
  "name": "velox-monorepo",
  "version": "1.0.0",
  "description": "Velox - High-performance libraries for modern web applications",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "./scripts/build.sh --web",
    "build:web": "npm run build --workspace=packages/formulas-web",
    "dev": "npm run dev --workspace=apps/docs",
    "dev:docs": "npm run dev --workspace=apps/docs",
    "docs:gen": "node scripts/generate-docs.js",
    "build:docs": "npm run docs:gen && npm run build --workspace=apps/docs",
    "preview:docs": "npm run preview --workspace=apps/docs",
    "clean": "npm run clean --workspaces",
    "test": "npm test --workspaces",
    "lint": "echo 'Add linting commands here'",
    "postinstall": "npm run build && patch-package",
    "mobile:ios": "npm run -w velox-playground pod-install && npm run ios --w velox-playground -- --simulator=\"iPhone 16\"",
    "mobile:android": "npm run android --workspace=apps/mobile",
    "mobile:start": "npm run start --workspace=apps/mobile -- --port 8082",
    "mobile:dev": "concurrently \"npm run mobile:start\" \"npm run mobile:ios\"",
    "mobile:clean": "cd apps/mobile && rm -rf node_modules ios/build && cd ios && pod deintegrate && pod install"
  },
  "keywords": [
    "velox",
    "high-performance",
    "webassembly",
    "wasm",
    "libraries",
    "web",
    "performance",
    "excel",
    "formula",
    "parser",
    "evaluator",
    "spreadsheet",
    "calculation"
  ],
  "author": "Velox Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "patch-package": "^8.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
