{
  "name": "velox-monorepo",
  "version": "1.0.0",
  "description": "Velox - High-performance libraries for modern web applications",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "./build.sh --web",
    "build:web": "npm run build --workspace=packages/formulas-web",
    "dev": "npm run dev --workspace=apps/docs",
    "dev:docs": "npm run dev --workspace=apps/docs",
    "docs:gen": "node scripts/generate-docs.js",
    "build:docs": "npm run docs:gen && npm run build --workspace=apps/docs",
    "preview:docs": "npm run preview --workspace=apps/docs",
    "clean": "npm run clean --workspaces",
    "test": "npm test --workspaces",
    "lint": "echo 'Add linting commands here'",
    "postinstall": "npm run build"
  },
  "keywords": [
    "velox",
    "high-performance",
    "webassembly",
    "wasm",
    "libraries",
    "web",
    "performance",
    "excel",
    "formula",
    "parser",
    "evaluator",
    "spreadsheet",
    "calculation"
  ],
  "author": "Velox Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
