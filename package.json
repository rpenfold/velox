{
  "name": "xl-formula-monorepo",
  "version": "1.0.0",
  "description": "XL Formula - High-performance Excel-like formula parser and evaluator",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "./build.sh --web",
    "build:web": "npm run build --workspace=packages/web",
    "dev": "npm run dev --workspace=apps/docs",
    "dev:docs": "npm run dev --workspace=apps/docs",
    "build:docs": "npm run build --workspace=apps/docs",
    "preview:docs": "npm run preview --workspace=apps/docs",
    "clean": "npm run clean --workspaces",
    "test": "npm test --workspaces",
    "lint": "echo 'Add linting commands here'",
    "postinstall": "npm run build"
  },
  "keywords": [
    "excel",
    "formula",
    "parser",
    "evaluator",
    "webassembly",
    "wasm",
    "spreadsheet",
    "calculation"
  ],
  "author": "XL Formula Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}